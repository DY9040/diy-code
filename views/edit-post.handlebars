<article class="edit-post-page">
    <a href="/dashboard"> &larr; back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <input class="edit-body-input" name="post-title" type="txt" value="{{post.post_body}}" />
            {{!--<span>({{post.post_body}})</span>--}}
        </div>
        <div>
            {{user.username}} | {{format_date created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}}</a>
        </div>
        <button type="submit">Save</button>
        <button type="button" class="delete-post">Delete</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Submit Comment</button>
    </div>
</form>

{{> comments post.comments}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>